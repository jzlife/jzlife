
.Top {
	width: 100%;
	height: 80rpx;
	background: rgba(1, 1, 1, .2);
	line-height: 80rpx;
	font-size: 24rpx;
}
.Top text {
	margin-top: 0rpx;
	margin-left: 2%;
}
.Nav {
	width: 100%;
	height: 100%;
}
.NavTop {
	width: 100%;
	height: 120rpx;
	background-color: white;
	border-top: 1rpx solid #BBBBBB;
	border-bottom: 1rpx solid #BBBBBB;
}
.NavTop_Name {
	position: relative;
	margin-left: 2%;
	margin-top: 20rpx;
	height: 40rpx;
	width: 254rpx;
	line-height: 40rpx;
	font-size: 30rpx;
	font-weight: bold;
}
.NavTopStatus {
	position: absolute;
	top: 0rpx;
	right: 0rpx;
	width: 100rpx;
	color: #0A98D5;
	height: 40rpx;
	line-height: 40rpx;
}
.NavTime {
	position: absolute;
	height: 40rpx;
	left: 2%;
	width: 400rpx;
	line-height: 40rpx;
	font-size: 24rpx;
	color: #BBBBBB;
}
.NavR {
	border-bottom: 1rpx solid #BBBBBB;
	height: 60rpx;
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	background: white;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	    -ms-flex-pack: justify;
	        justify-content: space-between;
}
.NavRuleName {
	position: relative;
	margin-top: 0rpx;
	margin-left: 2%;
	width: 160rpx;
	height: 60rpx;
	font-size: 30rpx;
	font-weight: bold;
}
.NavRuleName image {
	position: absolute;
	top: 10rpx;
	right: 0rpx;
	width: 40rpx;
	height: 40rpx;
}
.showMore {
	width: 96%;
	min-height: 200rpx;
	background: white;
	font-size: 32rpx;
	line-height: 40rpx;
	margin-left: 2%;
	-ms-text-spacing: 30rpx;
	    text-spacing: 30rpx;
	/* color: #888888; */
}


